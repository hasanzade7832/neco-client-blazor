<div class="org-scroll" style="@BuildStyle()">
    @ChildContent
</div>

<style>
    .org-scroll {
        scrollbar-width: thin;
        scrollbar-color: var(--mud-palette-primary,#2563EB) transparent
    }

        .org-scroll::-webkit-scrollbar {
            width: 10px;
            height: 10px
        }

        .org-scroll::-webkit-scrollbar-track {
            background: transparent
        }

        .org-scroll::-webkit-scrollbar-thumb {
            background-color: var(--mud-palette-primary,#2563EB);
            border-radius: 8px;
            border: 2px solid transparent;
            background-clip: content-box;
            box-shadow: 0 1px 2px rgba(0,0,0,.2) inset
        }

            .org-scroll::-webkit-scrollbar-thumb:hover {
                filter: brightness(.9)
            }
</style>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; } = default!;
    [Parameter] public string? MaxHeight { get; set; }
    [Parameter] public string? Height { get; set; }
    [Parameter] public string? Width { get; set; }
    [Parameter] public string? Style { get; set; }

    private string BuildStyle()
    {
        var s = "";
        if (!string.IsNullOrEmpty(Width)) s += $"width:{Width};";
        if (!string.IsNullOrEmpty(Height)) s += $"height:{Height};";
        if (!string.IsNullOrEmpty(MaxHeight)) s += $"max-height:{MaxHeight};";
        s += "overflow:auto;";
        if (!string.IsNullOrEmpty(Style)) s += Style;
        return s;
    }
}

@using MudBlazor
@using Microsoft.AspNetCore.Components
@using BlazorApp12.Models      
@namespace BlazorApp12.Components.Pages.Authentication

<MudPaper Class="login-card pa-6" Elevation="3">
    <MudText Typo="Typo.h6" Class="mb-2">ورود</MudText>
    <MudText Typo="Typo.caption" Class="mb-4">Welcome Back!</MudText>

    <MudForm @ref="_form" Model="@_model" OnValidSubmit="Submit">
        <MudTextField @bind-Value="_model.Username"
                      Label="USERNAME"
                      Placeholder="name@example.com"
                      For="@(()=>_model.Username)"
                      Required="true"
                      Variant="Variant.Outlined"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.AlternateEmail"
                      Class="mb-4" />

        <MudTextField @bind-Value="_model.Password"
                      Label="PASSWORD"
                      For="@(()=>_model.Password)"
                      Required="true"
                      Variant="Variant.Outlined"
                      InputType="@(_showPassword ? InputType.Text : InputType.Password)"
                      Adornment="Adornment.End"
                      AdornmentIcon="@(_showPassword ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff)"
                      OnAdornmentClick="@(()=> _showPassword = !_showPassword)"
                      Class="mb-6" />

        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   Type="Submit"
                   EndIcon="@Icons.Material.Filled.ArrowForward">
            ورود
        </MudButton>
    </MudForm>
</MudPaper>

@code {
    [Parameter] public EventCallback<LoginModel> OnLogin { get; set; }
    [Parameter] public string? UsernameSeed { get; set; }

    private MudForm? _form;
    private LoginModel _model = new();
    private bool _showPassword;

    protected override void OnInitialized()
    {
        if (!string.IsNullOrWhiteSpace(UsernameSeed))
            _model.Username = UsernameSeed;
    }

    private async Task Submit()
    {
        await _form!.Validate();
        if (_form.IsValid)
        {
            await OnLogin.InvokeAsync(_model);
        }
    }
}

@using MudBlazor
@using BlazorApp12.Components.Pages.Authentication

@namespace BlazorApp12.Components.Pages.Authentication

<MudPaper Class="pa-6 update-card" Elevation="4" Style="background-color:#FFE680;">
    <MudText Typo="Typo.h6" Class="mb-3">Updates of version @Version</MudText>

    <MudList T="UpdateItem" Dense="true">
        @foreach (var item in Items)
        {
            <MudListItem T="UpdateItem" Value="@item">
                <MudText Typo="Typo.subtitle2">
                    <b>@item.Title:</b> @item.Description
                </MudText>
            </MudListItem>
        }
    </MudList>
</MudPaper>

@code {
    [Parameter] public string Version { get; set; } = "X.YY";
    [Parameter] public IEnumerable<UpdateItem> Items { get; set; } = Enumerable.Empty<UpdateItem>();
}

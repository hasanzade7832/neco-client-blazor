@layout BlazorApp12.Components.Layout.EmptyLayout
@page "/login"
@using MudBlazor
@inject NavigationManager Nav

<MudGrid Class="login-layout"
         Spacing="0"
         AlignItems="Stretch"
         Style="width:100vw; height:100vh; overflow:hidden; background:#fff;">
    <!-- ستون خاکستری -->
    <MudItem xs="12" md="3" lg="2" xl="2" Class="col-grey"
             Style="padding:0; margin:0; height:100vh; display:flex;">
        <MudPaper Class="mud-width-full" Elevation="1" Style="background:#f3f3f3; flex:1;" />
    </MudItem>

    <!-- ستون وسطی -->
    <MudItem xs="12" md="6" lg="6" xl="6" Class="col-center"
             Style="padding:0; margin:0; height:100vh; display:flex; align-items:flex-end; justify-content:center;">
        <div class="login-box-container">
            <!-- این دیو فقط در md به بالا نمایش داده می‌شود -->
            <div class="login-top-image d-none d-md-block">
                <img src="images/bandaremam.jpg" alt="Banner" />
            </div>

            <LoginBox />
        </div>
    </MudItem>

    <!-- ستون زرد (آپدیت‌ها) -->
    <MudItem xs="12" md="3" lg="4" xl="4" Class="col-yellow d-flex align-center justify-center"
             Style="padding:0; margin:0; height:100vh;">
        <div class="update-panel-outer">
            <MudPaper Elevation="4" Class="update-panel">
                <div class="update-panel-inner">
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="update-title">
                        Updates of version 2.09
                    </MudText>
                    <ul class="update-list">
                        <li><b>New Features:</b> Highlights of the new version.</li>
                        <li><b>Bug Fixes:</b> Corrections of previous errors or issues.</li>
                        <li><b>Performance Improvements:</b> Enhancements to make the software run more efficiently.</li>
                        <li><b>User Interface Updates:</b> Changes to the design and layout for better usability.</li>
                        <li><b>Security Enhancements:</b> Upgrades to ensure better protection against threats.</li>
                        <li><b>Compatibility:</b> Information about compatibility with different devices or software.</li>
                    </ul>
                </div>
            </MudPaper>
        </div>
    </MudItem>
</MudGrid>


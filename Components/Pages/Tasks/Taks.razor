                <!-- In Progress -->
                <div style="flex:0 0 280px; width:280px; display:flex;flex-direction:column;border-radius:12px;overflow:hidden;background-color:rgba(245,158,11,0.15);">
                    <div style="display:flex;justify-content:space-between;align-items:center;padding:8px 12px;">
                        <div style="font-weight:600;font-size:1rem;">In Progress</div>
                        <div style="display:flex;gap:4px;">
                            <MudIconButton Icon="@Icons.Material.Filled.UnfoldMore" Size="Size.Small" />

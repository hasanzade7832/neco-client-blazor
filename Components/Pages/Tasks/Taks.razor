                                        <MudText Typo="Typo.caption">2024/03/03</MudText>
                                    </div>
                                    <div style="display:flex;align-items:center;gap:4px;">
                                        <MudText Typo="Typo.caption" Style="font-size:0.55rem;color:rgba(0,0,0,0.6);">DCC</MudText>

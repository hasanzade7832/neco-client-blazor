@page "/test"

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100 text-center">
    <h1 class="text-3xl font-bold text-blue-600 mb-4">
        سلام بلیزور + تیلویند 👋
    </h1>

    <p class="text-red-700 mb-6">
        این یک متن تستی ساده است که با TailwindCSS استایل داده شده.
    </p>

    <button @onclick="SayHello"
            class="px-6 py-2 rounded-lg bg-blue-500 text-white hover:bg-blue-600 transition">
        کلیک کن
    </button>

    <p class="mt-4 text-green-600 font-semibold">@message</p>
</div>

@code {
    private string message = "";

    private void SayHello()
    {
        message = "🎉 دکمه کلیک شد و متن با تیلویند نمایش داده شد!";
    }
}
